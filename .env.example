# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=books_crawler

# Crawler Configuration
TARGET_URL=https://books.toscrape.com
CRAWLER_CONCURRENT_REQUESTS=10
CRAWLER_RETRY_ATTEMPTS=3
CRAWLER_RETRY_DELAY=2
CRAWLER_TIMEOUT=30

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_CRON_HOUR=2
SCHEDULER_CRON_MINUTE=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Books Crawler API
API_VERSION=1.0.0

# Security
API_KEY=your-secret-api-key-change-this-in-production
SECRET_KEY=your-secret-jwt-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/crawler.log

# Reports
REPORT_OUTPUT_DIR=reports
REPORT_FORMAT=json

# Email Alerts (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=alert-recipient@example.com